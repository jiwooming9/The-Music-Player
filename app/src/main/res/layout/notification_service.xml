<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/notification_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_music_basic" />

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/notification_image"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Bài hát"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/notification_artist"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/notification_title"
        android:layout_toRightOf="@id/notification_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Nghệ sĩ"

        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/notification_next"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:scaleType="fitXY"
        android:tint="#F83B28"
        android:src="@drawable/ic_skip_next_black_24dp" />

    <ImageView
        android:id="@+id/notification_play"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@id/notification_next"
        android:scaleType="fitXY"
        android:tint="#F83B28"
        android:src="@drawable/ic_pause_black_24dp" />

    <ImageView
        android:id="@+id/notification_prev"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@id/notification_play"
        android:tint="#F83B28"
        android:scaleType="fitXY"
        android:src="@drawable/ic_skip_previous_black_24dp" />


    <ImageView
        android:id="@+id/notification_end"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:tint="@android:color/black"
        android:src="@drawable/ic_close_black_24dp" />

</RelativeLayout>
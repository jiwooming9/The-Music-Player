<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:foreground="?android:attr/selectableItemBackground"
    android:foregroundTint="@android:color/white"
    android:padding="10dp"
    android:elevation="15dp"
    android:id="@+id/rlListPlaylist"

    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgPlListImg"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_music_basic" />

    <TextView
        android:id="@+id/txPlListTitle"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgPlListImg"
        android:paddingLeft="10dp"
        android:text="Tên bài hát"
        android:textColor="#89817F"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/txPlListArtist"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgPlListImg"
        android:layout_below="@+id/txPlListTitle"
        android:paddingLeft="10dp"
        android:text="Nghệ sĩ"
        android:textColor="#89817F"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/txPlListDur"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgPlListImg"
        android:layout_below="@+id/txPlListArtist"
        android:paddingLeft="10dp"
        android:text="0:00"
        android:textColor="#89817F"
        android:textSize="11sp"
        />

    <ImageView
        android:id="@+id/imgPlListIsPlay"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"/>

</RelativeLayout>